# Source Prezto.
if [[ -s ~/.zprezto/init.zsh ]]; then
  source ~/.zprezto/init.zsh
else
  echo "Error sourcing zpresto!"
fi

# Customize to your needs...
export KEYTIMEOUT=0.01

# common configuration
source ~/.term_common

# User configuration
# ROS
source /opt/ros/indigo/setup.zsh
source ~/catkin_ws/devel/setup.zsh
source ~/overlay_ws/devel/setup.zsh

export ROS_PACKAGE_PATH="$ROS_PACKAGE_PATH:/home/arnaud/src/ext/ORB_SLAM2/Examples/ROS/ORB_SLAM2"

export PATH=$PATH:$HOME/scripts:/usr/local/bin:/usr/local/MATLAB/R2015a/bin
# export MANPATH="/usr/local/man:$MANPATH"

# You may need to manually set your language environment
# export LANG=en_US.UTF-8

# Preferred editor for local and remote sessions
if [[ -n $SSH_CONNECTION ]]; then
  export VISUAL='vim'
  export EDITOR='vim'
else
  export EDITOR='nvim'
  export VISUAL='nvim'
  alias vim='nvim'
fi

alias cws="source ~/src/catkin_ws/devel/setup.zsh"

